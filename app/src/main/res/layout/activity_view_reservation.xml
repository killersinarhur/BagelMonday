<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syf.kotlinbagelmonday.ViewReservation">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reserved_date"
        android:layout_marginStart="3dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/reserved_date_vr"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/reserved_date_vr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="4dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reserved_by"
        android:layout_marginStart="3dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/reserved_by_vr"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/reserved_by_vr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView3" />

    <Button
        android:id="@+id/add_to_calendar"
        android:layout_width="217dp"
        android:layout_height="48dp"
        android:background="@null"
        android:text="@string/add_to_calendar"
        tools:layout_constraintTop_creator="1"
        android:drawableLeft="@android:drawable/ic_menu_my_calendar"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="45dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cancel_reservation"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="153dp"
        android:background="@null"
        android:drawableLeft="@android:drawable/ic_dialog_email"
        android:text="Request A Swap"
        app:layout_constraintLeft_toLeftOf="@+id/add_to_calendar"
        app:layout_constraintRight_toRightOf="@+id/add_to_calendar"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
